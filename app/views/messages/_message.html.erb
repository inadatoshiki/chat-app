<div class="post-box">
  <div class="post-name-date">
    <div class="post-name">
      <%= message.user.name %>
    </div>
    <div class="post-date">
      <%= l message.created_at %>
    </div>
  </div>  
  <div class="post-message">
    <div class="message-content">
      <%= message.content %>
    </div>  
        <%= image_tag message.image.variant(resize: '500x500'), class: 'message-image' if message.image.attached? %> 
  </div>  
</div>